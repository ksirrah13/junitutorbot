{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationMap": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ES2022",
		"moduleResolution": "NodeNext",
		"noErrorTruncation": true,
		"noImplicitOverride": true,
		"outDir": "dist",
		"sourceMap": true,
		"strict": true,
		"target": "ES2022"
	},
	"include": ["src/**/*.ts"]
}
